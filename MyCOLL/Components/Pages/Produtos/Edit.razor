@page "/produtos/editar/{Id:int}"
@using MyCOLL.Entities
@using MyCOLL.Services
@inject ProdutoService ProdutoService
@inject CategoriaService CategoriaService
@inject ModoEntregaService ModoEntregaService
@inject NavigationManager Nav
@inject IWebHostEnvironment Env
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Admin,Gestor")]

<PageTitle>Editar Produto</PageTitle>

<div class="container py-4" style="max-width: 800px;">
    @if (produto != null)
    {
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3">
                <h4 class="mb-0 fw-bold">Editar: @produto.Nome</h4>
            </div>
            <div class="card-body p-4">
                <EditForm Model="@produto" OnValidSubmit="Guardar">
                    <DataAnnotationsValidator />

                    <div class="row mb-3">
                        <div class="col-md-8">
                            <label class="form-label fw-semibold">Nome</label>
                            <InputText @bind-Value="produto.Nome" class="form-control" />
                        </div>
                         <div class="col-md-4">
                             <label class="form-label fw-semibold">Stock</label>
                             <InputNumber @bind-Value="produto.Stock" class="form-control" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Descrição</label>
                        <InputTextArea @bind-Value="produto.Descricao" class="form-control" rows="3" />
                    </div>

                    <!-- PREÇOS -->
                    <div class="row mb-3 bg-light p-3 rounded mx-0 border">
                        <div class="col-md-4">
                            <label class="form-label fw-bold text-primary">Preço Base (€)</label>
                            <InputNumber @bind-Value="produto.PrecoBase" class="form-control" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-bold text-success">Margem (%)</label>
                            <InputNumber @bind-Value="produto.MargemLucro" class="form-control" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-bold">Final (€)</label>
                            <input type="text" class="form-control fw-bold" value="@((produto.PrecoBase * (1 + produto.MargemLucro/100)).ToString("C2"))" disabled />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Categoria</label>
                            <InputSelect @bind-Value="produto.CategoriaId" class="form-select">
                                @foreach (var c in categorias) { <option value="@c.Id">@c.Nome</option> }
                            </InputSelect>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Modo de Entrega</label>
                            <InputSelect @bind-Value="produto.ModoEntregaId" class="form-select">
                                @foreach (var m in modos) { <option value="@m.Id">@m.Nome</option> }
                            </InputSelect>
                        </div>
                    </div>

                    <!-- Imagem -->
                    <div class="mb-4">
                        <label class="form-label fw-semibold">Imagem</label>
                        <InputFile OnChange="UploadImagem" class="form-control" accept=".jpg,.png" />
                        @if (!string.IsNullOrEmpty(produto.ImagemUrl))
                        {
                            <div class="mt-2">
                                <img src="@produto.ImagemUrl" class="img-thumbnail" style="height: 100px;" />
                            </div>
                        }
                    </div>

                    <div class="mb-4 form-check form-switch">
                        <InputCheckbox @bind-Value="produto.Ativo" class="form-check-input" id="ativo" />
                        <label class="form-check-label" for="ativo">Ativo</label>
                    </div>

                    <div class="d-flex justify-content-end gap-2 pt-3">
                        <a href="/produtos" class="btn btn-light border">Cancelar</a>
                        <button type="submit" class="btn btn-primary px-4">Guardar Alterações</button>
                    </div>
                </EditForm>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public int Id { get; set; }
    private Produto? produto;
    private List<Categoria> categorias = new();
    private List<ModoEntrega> modos = new();

    protected override async Task OnInitializedAsync()
    {
        categorias = await CategoriaService.GetAllAsync();
        modos = await ModoEntregaService.GetAllAsync();
        produto = await ProdutoService.GetByIdAsync(Id);
    }

    private async Task UploadImagem(InputFileChangeEventArgs e)
    {
        var file = e.File;
        if (file != null && produto != null)
        {
            var nome = $"{Guid.NewGuid()}{Path.GetExtension(file.Name)}";
            var path = Path.Combine(Env.WebRootPath, "uploads", "produtos");
            Directory.CreateDirectory(path);
            await using var stream = file.OpenReadStream(5 * 1024 * 1024);
            await using var fs = new FileStream(Path.Combine(path, nome), FileMode.Create);
            await stream.CopyToAsync(fs);
            produto.ImagemUrl = $"/uploads/produtos/{nome}";
        }
    }

    private async Task Guardar()
    {
        if (produto != null)
        {
            await ProdutoService.UpdateAsync(produto);
            Nav.NavigateTo("/produtos");
        }
    }
}