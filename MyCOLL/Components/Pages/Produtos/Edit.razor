@page "/produtos/editar/{Id:int}"
@using MyCOLL.Entities
@using MyCOLL.Services
@inject ProdutoService ProdutoService
@inject CategoriaService CategoriaService
@inject ModoEntregaService ModoEntregaService
@inject NavigationManager Nav
@inject IWebHostEnvironment Env
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Admin,Gestor")]

<PageTitle>Editar Produto</PageTitle>

<div class="container py-4" style="max-width: 800px;">
    @if (produto == null)
    {
         <div class="text-center py-5">A carregar...</div>
    }
    else
    {
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3">
                <h4 class="mb-0 fw-bold">Editar: @produto.Nome</h4>
            </div>
            <div class="card-body p-4">
                <EditForm Model="@produto" OnValidSubmit="Guardar">
                    <DataAnnotationsValidator />
                    <ValidationSummary class="text-danger mb-3" />

                    <div class="row mb-3">
                        <div class="col-md-8">
                            <label class="form-label fw-semibold">Nome</label>
                            <InputText @bind-Value="produto.Nome" class="form-control" />
                        </div>
                         <div class="col-md-4">
                             <label class="form-label fw-semibold">Stock</label>
                             <InputNumber @bind-Value="produto.Stock" class="form-control" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Descrição</label>
                        <InputTextArea @bind-Value="produto.Descricao" class="form-control" rows="4" />
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label class="form-label fw-semibold">Preço (€)</label>
                            <InputNumber @bind-Value="produto.Preco" class="form-control" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-semibold">Categoria</label>
                            <InputSelect @bind-Value="produto.CategoriaId" class="form-select">
                                @foreach (var c in categorias)
                                {
                                    <option value="@c.Id">@c.Nome</option>
                                }
                            </InputSelect>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-semibold">Modo de Entrega</label>
                            <InputSelect @bind-Value="produto.ModoEntregaId" class="form-select">
                                @foreach (var m in modos)
                                {
                                    <option value="@m.Id">@m.Nome</option>
                                }
                            </InputSelect>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-semibold">Alterar Imagem</label>
                        <InputFile OnChange="UploadImagem" class="form-control" accept=".jpg,.jpeg,.png,.webp" />
                        @if (!string.IsNullOrEmpty(produto.ImagemUrl))
                        {
                            <div class="mt-2 p-2 border rounded bg-light d-inline-block">
                                <small class="d-block text-muted mb-1">Imagem Atual:</small>
                                <img src="@produto.ImagemUrl" class="img-fluid" style="max-height: 100px;" />
                            </div>
                        }
                    </div>

                    <div class="mb-4 form-check form-switch">
                        <InputCheckbox @bind-Value="produto.Ativo" class="form-check-input" id="ativo" />
                        <label class="form-check-label" for="ativo">Ativo</label>
                    </div>

                    <div class="d-flex justify-content-end gap-2 border-top pt-3">
                        <a href="/produtos" class="btn btn-light border">Cancelar</a>
                        <button type="submit" class="btn btn-primary px-4">Guardar Alterações</button>
                    </div>
                </EditForm>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public int Id { get; set; }

    private Produto? produto;
    private List<Categoria> categorias = new();
    private List<ModoEntrega> modos = new();

    protected override async Task OnInitializedAsync()
    {
        categorias = await CategoriaService.GetAllAsync();
        modos = await ModoEntregaService.GetAllAsync();
        produto = await ProdutoService.GetByIdAsync(Id);

        if (produto == null) Nav.NavigateTo("/produtos");
    }

    private async Task UploadImagem(InputFileChangeEventArgs e)
    {
        var file = e.File;
        if (file != null && produto != null)
        {
            var nomeFicheiro = $"{Guid.NewGuid()}{Path.GetExtension(file.Name)}";
            var pastaDestino = Path.Combine(Env.WebRootPath, "uploads", "produtos");
            Directory.CreateDirectory(pastaDestino);

            var caminhoCompleto = Path.Combine(pastaDestino, nomeFicheiro);

            await using var stream = file.OpenReadStream(maxAllowedSize: 5 * 1024 * 1024);
            await using var fs = new FileStream(caminhoCompleto, FileMode.Create);
            await stream.CopyToAsync(fs);

            produto.ImagemUrl = $"/uploads/produtos/{nomeFicheiro}";
        }
    }

    private async Task Guardar()
    {
        if (produto != null)
        {
            await ProdutoService.UpdateAsync(produto);
            Nav.NavigateTo("/produtos");
        }
    }
}