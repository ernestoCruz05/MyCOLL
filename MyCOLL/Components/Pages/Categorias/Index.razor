@page "/categorias"
@inject MyCOLL.Services.CategoriaService CategoriaService
@inject NavigationManager NavigationManager
@inject IJSRuntime js
@attribute [Microsoft.AspNetCore.Authorization.Authorize(Roles = "Admin,Gestor,Fornecedor")]

<PageTitle>Categorias</PageTitle>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-normal mb-0">Categorias</h2>
        <a href="/categorias/create" class="btn btn-dark">
            <i class="bi bi-plus-lg"></i> Nova Categoria
        </a>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
        </div>
    }

    <div class="card shadow-sm border-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th style="width: 50px;">ID</th>
                        <th>NOME</th>
                        <th>DESCRIÇÃO</th>
                        <th class="text-center">ESTADO</th>
                        <th class="text-center" style="width: 200px;">AÇÕES</th>
                    </tr>
                </thead>
                <tbody>
                    @if (categorias == null)
                    {
                        <tr><td colspan="5" class="text-center py-4">A carregar...</td></tr>
                    }
                    else if (!categorias.Any())
                    {
                        <tr><td colspan="5" class="text-center py-4 text-muted">Sem categorias registadas.</td></tr>
                    }
                    else
                    {
                        @foreach (var c in categorias)
                        {
                            <tr>
                                <td class="text-muted small">#@c.Id</td>
                                <td class="fw-semibold">@c.Nome</td>
                                <td class="text-muted small">@c.Descricao</td>
                                <td class="text-center">
                                    @if (c.Ativa)
                                    {
                                        <span class="badge bg-success-subtle text-success border border-success-subtle">Ativa</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary-subtle text-secondary border border-secondary-subtle">Inativa</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <button class="btn btn-sm btn-outline-secondary me-1" @onclick="() => EditCategoria(c.Id)">
                                        Editar
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteCategoria(c.Id)">
                                        Eliminar
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@code {
    private List<MyCOLL.Entities.Categoria>? categorias;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await CarregarDados();
    }

    private async Task CarregarDados()
    {
        categorias = await CategoriaService.GetAllAsync();
    }

    private void EditCategoria(int id)
    {
        NavigationManager.NavigateTo($"/categorias/edit/{id}");
    }

    private async Task DeleteCategoria(int id)
    {
        errorMessage = null;

        var confirmar = await js.InvokeAsync<bool>("confirm", "Tem a certeza que quer eliminar esta categoria?");

        if (confirmar)
        {
            try
            {
                await CategoriaService.DeleteAsync(id);
                await CarregarDados();
            }
            catch (Exception ex)
            {
                errorMessage = ex.Message;


            }
        }
    }
}