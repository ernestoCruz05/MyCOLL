@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Identity
@using MyCOLL.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject NavigationManager NavigationManager


<div class="sidebar d-flex flex-column justify-content-between text-white"
     style="width: 250px; background-color: #1f1f1f; height: 100vh;">

    <div class="p-4">
        <h4 class="fw-bold text-white mb-4 text-center">MyCOLL</h4>
        <hr class="border-secondary mb-4" />

        <ul class="nav nav-pills flex-column mb-auto">
            <li class="nav-item">
                <NavLink class="nav-link text-white px-3 py-2" href="/" Match="NavLinkMatch.All">
                    <i class="bi bi-house-door me-2"></i> Início
                </NavLink>
            </li>
            <li>
                <NavLink class="nav-link text-white px-3 py-2" href="/categorias">
                    <i class="bi bi-tags me-2"></i> Categorias
                </NavLink>
            </li>
            <li>
                <NavLink class="nav-link text-white px-3 py-2" href="/produtos">
                    <i class="bi bi-box-seam me-2"></i> Produtos
                </NavLink>
            </li>
            <li>
                <NavLink class="nav-link text-white px-3 py-2" href="/modosentrega">
                    <i class="bi bi-truck me-2"></i> Modos de Entrega
                </NavLink>
            </li>
            <AuthorizeView Roles="Admin,Gestor">
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/utilizadores">
                        <span class="bi bi-people" aria-hidden="true"></span> Utilizadores
                    </NavLink>
                </div>
            </AuthorizeView>

        </ul>
    </div>



    <div class="p-4 border-top border-secondary">
        <AuthorizeView>
            <Authorized Context="auth">
                <div class="sidebar-footer text-center">
                    <div class="mb-2 text-light small">
                        <i class="bi bi-person-circle me-1"></i>
                        @auth.User.Identity?.Name
                        <br />
                        <span class="text-muted">@GetUserRole(auth)</span>
                    </div>

                    <form action="Account/Logout" method="post" class="mt-3">
                        <AntiforgeryToken />
                        <button type="submit" class="btn btn-outline-light w-100 sidebar-btn">
                            Logout
                        </button>
                    </form>

                    <div class="text-center mt-2 small text-secondary">© MyCOLL 2025</div>
                </div>
            </Authorized>

            <NotAuthorized>
                <div class="sidebar-footer">
                    <form action="Account/Login" method="get">
                        <button type="submit" class="btn btn-primary w-100 sidebar-btn">Login</button>
                    </form>
                    <div class="text-center mt-2 small text-secondary">© MyCOLL 2025</div>
                </div>
            </NotAuthorized>

            <NotAuthorized>
                <div class="sidebar-footer">
                    <button class="btn btn-primary w-100 sidebar-btn" @onclick="GoToLogin">
                        Login
                    </button>
                    <div class="text-center mt-2 small text-secondary">© MyCOLL 2025</div>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </div>

    @code {
        private async Task Logout()
        {
            await SignInManager.SignOutAsync();
            NavigationManager.NavigateTo("/Account/Login", forceLoad: true);
        }

        private void GoToLogin()
        => NavigationManager.NavigateTo("/Account/Login");

        private string GetUserRole(AuthenticationState auth)
        {
            var roleClaim = auth.User.Claims
            .FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Role);
            return roleClaim?.Value ?? "User";
        }
    }
</div>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}
