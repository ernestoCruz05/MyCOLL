@implements IDisposable
@inject NavigationManager NavigationManager

<div class="sidebar d-flex flex-column justify-content-between text-white"
     style="width: 250px; background-color: #1f1f1f; height: 100vh;">

    <!-- Top Logo -->
    <div class="p-4">
        <h4 class="fw-bold text-white mb-4 text-center">MyCOLL</h4>
        <hr class="border-secondary mb-4" />

        <!-- Navigation Links -->
        <ul class="nav nav-pills flex-column mb-auto">
            <li class="nav-item">
                <NavLink class="nav-link text-white px-3 py-2" href="/" Match="NavLinkMatch.All">
                    <i class="bi bi-house-door me-2"></i> Início
                </NavLink>
            </li>
            <li>
                <NavLink class="nav-link text-white px-3 py-2" href="/categorias">
                    <i class="bi bi-tags me-2"></i> Categorias
                </NavLink>
            </li>
            <li>
                <NavLink class="nav-link text-white px-3 py-2" href="/produtos">
                    <i class="bi bi-box-seam me-2"></i> Produtos
                </NavLink>
            </li>
            <li>
                <NavLink class="nav-link text-white px-3 py-2" href="/modosentrega">
                    <i class="bi bi-truck me-2"></i> Modos de Entrega
                </NavLink>
            </li>
        </ul>
    </div>

    <!-- Bottom section -->
    <div class="p-4 border-top border-secondary">
        <AuthorizeView>
            <Authorized>
                <div class="text-white small mb-3">
                    <i class="bi bi-person-circle me-2"></i> @context.User.Identity?.Name
                </div>
                <form action="Account/Logout" method="post">
                    <AntiforgeryToken />
                    <button type="submit" class="btn btn-outline-danger w-100 btn-sm">
                        <i class="bi bi-box-arrow-right"></i> Logout
                    </button>
                </form>
            </Authorized>
            <NotAuthorized>
                <NavLink class="btn btn-outline-light w-100 btn-sm" href="Account/Login">
                    <i class="bi bi-person"></i> Login
                </NavLink>
            </NotAuthorized>
        </AuthorizeView>

        <div class="text-center text-muted small mt-3">
            © MyCOLL 2025
        </div>
    </div>
</div>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}
